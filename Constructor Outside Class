#include <iostream>
using namespace std;

class Student {
    int roll_no;
    string name;
    long fee;

public:
    Student(int r, string n, long f);   // Constructor declaration
    void display();
};

// Constructor definition outside the class
Student::Student(int r, string n, long f) {
    roll_no = r;
    name = n;
    fee = f;
}

// Member function definition outside the class
void Student::display() {
    cout << "Name: " << name 
         << "\nRoll No: " << roll_no 
         << "\nFee: " << fee << endl;
}

int main() {
    // Creating an object and passing values to constructor
    Student s(101, "Barkha", 50000);
    s.display();

    return 0;
}

/* 
Sample Output:

Name: Barkha
Roll No: 101
Fee: 50000
*/
